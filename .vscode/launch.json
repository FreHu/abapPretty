{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "list package recursively",
      "smartStep": true,
      "program": "${workspaceFolder}/bin/run",
      "args": ["list", "-c", "NPL", "DEVC/K", "$ABAPGIT", "-r"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "list package with environment login",
      "smartStep": true,
      "program": "${workspaceFolder}/bin/run",
      "env": {
        "SAP_ASHOST": "localhost",
        "SAP_PORT": "8000",
        "SAP_USER": "developer",
        "SAP_PASSWORD": "wrong", // will fail, but that's ok. Just don't lock yourself!
        "SAP_SSL": "no"
      },
      "args": ["list", "DEVC/K", "$ABAPGIT"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "simulate FG",
      "smartStep": true,
      "program": "${workspaceFolder}/bin/run",
      "args": ["simulate", "-c", "NPL", "FUGR/F", "ZABAPGIT_PARALLEL"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "format include",
      "smartStep": true,
      "program": "${workspaceFolder}/bin/run",
      "args": [
        "prettyprint",
        "-c",
        "NPL",
        "PROG/I",
        "ZDEMO_EXCEL_OUTPUTOPT_INCL"
      ],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "process generated code",
      "smartStep": true,
      "program": "${workspaceFolder}/bin/run",
      "args": ["prettyprint", "-c", "NPL", "INTF/OI", "ZIWCI_DEMO_EXCEL_WDA01"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "generated function group",
      "smartStep": true,
      "program": "${workspaceFolder}/bin/run",
      "args": [
        "prettyprint",
        "-c",
        "d1_3",
        "FUGR/F",
        "/BTI/TE_AUTHGROUPS",
        "-t",
        "L01K900010"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
